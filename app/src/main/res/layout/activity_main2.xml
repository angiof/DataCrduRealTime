<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity2">

    <Button
        android:id="@+id/btn_main2_querry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delate query"
        app:layout_constraintEnd_toEndOf="@+id/tx_desc_2"
        app:layout_constraintStart_toStartOf="@+id/tx_desc_2"
        app:layout_constraintTop_toBottomOf="@+id/tx_desc_2" />

    <EditText
        android:id="@+id/tx_id_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tx_desc_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="desc"
        app:layout_constraintEnd_toEndOf="@+id/tx_id_2"
        app:layout_constraintStart_toStartOf="@+id/tx_id_2"
        app:layout_constraintTop_toBottomOf="@+id/tx_id_2" />
</androidx.constraintlayout.widget.ConstraintLayout>